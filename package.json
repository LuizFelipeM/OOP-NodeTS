{
  "name": "oop-nodets",
  "version": "1.0.0",
  "description": "Template for Node with Typescript, TypeORM, Eslint, Nodemon and Jest pre configured",
  "main": "startup.js",
  "scripts": {
    "build": "tsc -p .",
    "start": "node --inspect=5858 -r ts-node/register -r dotenv-safe/config ./src/server.ts",
    "dev": "nodemon",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuizFelipeM/OOP-NodeTS.git"
  },
  "keywords": [
    "Node",
    "Typescript",
    "Inversify",
    "Nodemon",
    "TypeORM",
    "Eslint",
    "Template",
    "Jest"
  ],
  "author": "Luiz Felipe Muniz Moura",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LuizFelipeM/OOP-NodeTS/issues"
  },
  "homepage": "https://github.com/LuizFelipeM/OOP-NodeTS#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv-save": "^1.2.0",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "nodemonConfig": {
    "ignore": [
      "/*.test.ts",
      "/*.spec.ts",
      ".git",
      "node_modules",
      "migrations",
      "seeds"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
